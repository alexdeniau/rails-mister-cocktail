<div class="container">
  <div class="row">
    <div class="col-6 offset-3">
      <h1>Add a dose to <%= @cocktail.name %></h1>
      <%= simple_form_for([@cocktail, @dose]) do |f| %>
        <%= f.input :description %>
        <%= f.submit "Submit dose" %>
      <% end %>

      <%= link_to 'Back to cocktails list', cocktails_path %>

    </div>
  </div>
</div>
